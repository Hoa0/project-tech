<!doctype html>
<html lang="nl">

<head>
    <%- include('layout/head'); -%>
</head>

<body>
    <%- include('layout/header'); -%>

        <main class="filterPage">
            <!-- filter page -->
            <section class="logoMatchingApp">
                <img src="images/logoMatchApp.png" alt="afbLogo" class="logoImage">
                <h2 class="titelFilter">
                    <%= title %>
                </h2>
            </section>

            <form action="/filterChef/result" method="post">
                <div class="filterCenter">
                    <fieldset>
                        <!-- lijst met categorieen voorkeur opgeven-->
                        <legend>Gender:</legend>
                        <input  type="radio" name="gender" value="(M)" required>
                        <label> Man</label>

                        <input  type="radio" name="gender" value="(V)" required>
                        <label> Vrouw</label>
                    </fieldset>
                    <fieldset>
                        <!-- lijst met categorieen voorkeur opgeven-->
                        <legend>Leeftijd:</legend>
                        <input type="checkbox" name="categAge" value="18 t/m 25" >
                        <label>18 t/m 25 jaar</label> <br>

                        <input type="checkbox" name="categAge" value="25 t/m 35" >
                        <label> 25 jaar t/m 35</label> <br>

                        <input type="checkbox" name="categAge" value="35 en ouder" >
                        <label>35 jaar en ouder</label>
                    </fieldset>
                    <fieldset>
                        <!-- lijst met categorieen voorkeur opgeven-->
                        <legend>Skills:</legend>
                        <input type="checkbox" name="skills" value="amateur" >
                        <label> Amateur</label> 

                        <input type="checkbox" name="skills" value="gevorderd" >
                        <label> Gevorderd</label> <br>

                        <input type="checkbox" name="skills" value="professioneel">
                        <label> Professioneel</label>
                    </fieldset>

                    <fieldset>
                        <!-- lijst met categorieen voorkeur opgeven-->
                        <legend>Sushi gerechten:</legend>
                        <input type="checkbox" name="foodDish" value="Beef maki" >
                        <label> Beef maki</label><br>

                        <input type="checkbox" name="foodDish" value="Temaki" >
                        <label> Temaki</label><br>

                        <input type="checkbox" name="foodDish" value="EBI Fry Maki">
                        <label> EBI Fry Maki</label><br>

                        <input type="checkbox" name="foodDish" value="Zalm">
                        <label> Zalm</label><br>

                        <input type="checkbox" name="foodDish" value="California Maki">
                        <label> California Maki</label>

                    </fieldset>
                </div>

                <button class="bntFilterSearch">Zoek Chef-kok</button>
            </form>

        </main>

        <!-- footer-->
        <%- include('layout/footer'); -%>
            <script src="scripts/script.js"></script>
</body>

</html>